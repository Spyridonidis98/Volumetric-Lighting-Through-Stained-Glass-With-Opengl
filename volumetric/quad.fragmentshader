#version 330 core
out vec4 fragment_color;
in vec2 vertex_UV;


uniform sampler2D screenTexture;
uniform sampler2D screenTexture2;




void main()
{   

    
    vec4 color = vec4(vec3(texture(screenTexture, vertex_UV)), 1) ;//+ vec4(pow(1/length(vertex_UV-light_screenspace),25),0.0,0.0,1);
    vec4 rays =  vec4(vec3(texture(screenTexture2, vertex_UV)), 0) ;
    
    fragment_color = color +  rays; 
   

}